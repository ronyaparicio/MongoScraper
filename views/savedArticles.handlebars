<div class="row">
    {{#each art}}
        <div class="col s12 m12">
            <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                    <span class="card-title">{{title}}</span>
                </div>
                <div class="card-action">
                    <a href="{{link}}">LINK</a>
                    <a id="{{id}}" class="waves-effect waves-light btn comment">comment</a>
                    <a id = "{{id}}" class="  #e53935 red darken-1 btn delete" href="javascript:void(0);">delete</a>
                </div>
            </div>
        </div>
    {{/each}}
</div>